{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "outDir": "build",
    "paths": {
      "@iamkenos/hornet": ["src/index"],
      "@iamkenos/hornet/*": ["src/*"],
      "@demo/*": ["demo/*"],
      "@test/*": ["test/*"],
      "@commands": ["src/commands/index"],
      "@commands/*": ["src/commands/*"],
      "@common": ["src/common/index"],
      "@common/*": ["src/common/*"],
      "@conditions": ["src/conditions/index"],
      "@conditions/*": ["src/conditions/*"],
      "@config": ["src/config/index"],
      "@config/*": ["src/config/*"],
      "@generics": ["src/generics/index"],
      "@generics/*": ["src/generics/*"],
      "@gherkin": ["src/gherkin/index"],
      "@gherkin/*": ["src/gherkin/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES5",
    "types": [
      "@wdio/cucumber-framework",
      "@wdio/selenium-standalone-service",
      "@wdio/browserstack-service",
      "@wdio/devtools-service",
      "wdio-intercept-service",
      "webdriverio/async",
      "@types/jest",
      "node"
    ]
  },
  "include": ["./**/**.ts"],
  "exclude": ["node_modules"]
}
