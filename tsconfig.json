{
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "build",
    "paths": {
      "@iamkenos/hornet": ["src/"],
      "@iamkenos/hornet/*": ["src/*"],
      "@cli": ["src/cli/*"],
      "@cli/*": ["src/cli/*"],
      "@core": ["src/core/*"],
      "@core/*": ["src/core/*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": false,
    "target": "ES5",
    "types": [
      "@wdio/cucumber-framework",
      "@wdio/selenium-standalone-service",
      "@wdio/browserstack-service",
      "@wdio/devtools-service",
      "wdio-intercept-service",
      "webdriverio/async",
      "node"
    ]
  },
  "include": ["./**/**.ts"]
}
